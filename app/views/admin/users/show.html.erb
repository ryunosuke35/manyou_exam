<p id="notice"><%= notice %></p>

  <p>id:<%= @user.id %></p>
  <p>name:<%= @user.name %></p>
  <p>email:<%= @user.email %></p>

<table>
  <thead>
    <tr>
      <td>タイトル</td>
      <td>内容</td>
      <td>終了期限</td>
      <td>ステータス</td>
      <td>優先順位</td>
    </tr>
  </thead>

  <tbody>
    <% @task.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '戻る', admin_users_path, class: 'btn btn-default' %>
