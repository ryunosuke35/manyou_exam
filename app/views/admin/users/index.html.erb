<p>管理画面のユーザー一覧</p>

<table>
  <thead>
    <tr>
      <td>id</td>
      <td>名前</td>
      <td>email</td>
      <td>taskの数</td>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to '詳細', admin_user_path(user.id), class: 'btn btn-default' %></td>
        <td><%= link_to '編集', edit_admin_user_path(user.id), class: 'btn btn-default' %></td>
        <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規登録', new_admin_user_path, class: 'btn btn-default' %>
