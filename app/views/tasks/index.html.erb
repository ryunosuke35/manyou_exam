<h2>一覧</h2>
<p id="notice"><%= notice %></p><br>
  <table>
    <thead>
      <tr>
        <td>title</td>
        <td>content</td>
      </tr>
    </thead>

    <tbody>
      <%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>

      <% @task.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.deadline %></td>
          <td><%= link_to '詳細', task_path(task.id) %></td>
          <td><%= link_to '編集', edit_task_path(task.id) %></td>
          <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to '新規登録', new_task_path %>
